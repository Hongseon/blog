---
const currentPath = Astro.url.pathname;
---

<header class="bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm border-b border-slate-200 dark:border-slate-700 sticky top-0 z-50">
	<nav class="container mx-auto px-4 py-4 max-w-4xl">
		<div class="flex items-center justify-between">
			<a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
				<img src="/blog-icon.png" alt="Blog Icon" class="w-10 h-10 rounded-lg" />
				<span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
					My Blog
				</span>
			</a>
			<ul class="flex gap-6">
				<li>
					<a 
						href="/" 
						class={`px-3 py-2 rounded-md transition-colors ${
							currentPath === '/' 
								? 'text-blue-600 dark:text-blue-400 font-semibold' 
								: 'text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400'
						}`}
					>
						Home
					</a>
				</li>
				<li>
					<a 
						href="/about" 
						class={`px-3 py-2 rounded-md transition-colors ${
							currentPath === '/about' 
								? 'text-blue-600 dark:text-blue-400 font-semibold' 
								: 'text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400'
						}`}
					>
						About
					</a>
				</li>
				<li>
					<a 
						href="/blog" 
						class={`px-3 py-2 rounded-md transition-colors ${
							currentPath.startsWith('/blog') 
								? 'text-blue-600 dark:text-blue-400 font-semibold' 
								: 'text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400'
						}`}
					>
						Blog
					</a>
				</li>
			</ul>
		</div>
	</nav>
</header>

